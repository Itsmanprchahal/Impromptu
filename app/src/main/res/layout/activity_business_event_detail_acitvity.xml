<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colortextwhite"
    tools:context=".BusinessRegisterLogin.BusinessEventDetailAcitvity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/event_details_text"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            android:id="@+id/details_card"
            tools:ignore="MissingConstraints">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/BusinessEvent_detailsFragment_book_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/back"
                        android:layout_centerVertical="true"
                        android:background="@drawable/transperent"
                        android:id="@+id/backon_b_eventdetail"></ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Details"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/mediumtext"
                        android:textColor="@color/colortextBlack"
                        android:fontFamily="@font/circularstdbold"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/editevent"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/export"
                        android:background="@drawable/transperent"
                        tools:ignore="MissingConstraints" />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>



        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/event_details_text">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/perview_progress_bar"
                android:layout_marginLeft="@dimen/defaultmargin"
                android:layout_marginRight="@dimen/defaultmargin"
                android:background="@color/colortextwhite">


                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/BusinessEvent_detailsFragment_book_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.viewpager.widget.ViewPager>

                <LinearLayout
                    android:id="@+id/BusinessEvent_detailsFragment_book_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="start"
                    android:orientation="horizontal">
                </LinearLayout>

                <CheckBox
                    android:id="@+id/eventdetail_favbt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:button="@drawable/custom_star_check_box" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/perview_tittle_layout"
                    android:layout_alignParentBottom="true"
                    android:background="#3CD3D3D3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/BusinessEvent_detailsFragment_book_tittle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:fontFamily="@font/circularstdbold"
                        android:text=""
                        android:textColor="@color/colortextwhite"
                        android:shadowColor="#A90A0A0A"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="3"
                        android:textSize="26sp"
                        tools:ignore="MissingConstraints" />

                    <View
                        android:id="@+id/eventview"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:shadowColor="#A90A0A0A"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="3"
                        android:background="@color/colortextwhite"></View>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/BusinessEvent_detailsFragment_book_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:fontFamily="@font/sfuitextlight"
                            app:layout_constraintRight_toLeftOf="@id/event_price"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text=""
                            android:shadowColor="#A90A0A0A"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            android:textColor="@color/colortextwhite"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/event_price"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="end"
                            android:text=""
                            android:shadowColor="#A90A0A0A"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            android:fontFamily="@font/sfuitextlight"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:textColor="@color/colortextwhite"
                            android:textSize="@dimen/_12sdp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/BusinessEvent_detailsFragment_book_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text=""
                            android:shadowColor="#A90A0A0A"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            android:fontFamily="@font/sfuitextlight"
                            android:textColor="@color/colortextwhite"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/BusinessEvent_detailsFragment_book_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text=""
                            android:shadowColor="#A90A0A0A"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            android:fontFamily="@font/sfuitextlight"
                            android:textColor="@color/colortextwhite"
                            android:textSize="@dimen/_12sdp"
                            tools:ignore="MissingConstraints"></TextView>


                        <TextView
                            android:id="@+id/BusinessEvent_detailsFragment_book_categry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text=""
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:shadowColor="#A90A0A0A"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="3"
                            android:fontFamily="@font/sfuitextlight"
                            android:textColor="@color/colortextwhite"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>


            <androidx.cardview.widget.CardView
                app:cardElevation="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/defaultmargin"
                android:layout_marginRight="@dimen/defaultmargin"
                android:layout_marginBottom="@dimen/defaultmargin"
                android:background="@drawable/cardcorners">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/BusinessEvent_detailsFragment_main_linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/defaultmargin"
                        android:orientation="vertical"
                        android:padding="@dimen/defaultmargin">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circularstdbold"
                            android:text="Description"
                            android:textColor="@color/colortextBlack"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <com.borjabravo.readmoretextview.ReadMoreTextView
                            android:id="@+id/BusinessEvent_detailsFragment_book_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:trimExpandedText="Show more"
                            app:trimCollapsedText="Show less"
                            app:trimMode="trimModeLength"
                            app:trimLength="150"
                            android:fontFamily="@font/sfuitextlight"
                            app:colorClickableText="@color/colorTheme"
                            android:text="" />

                        <TextView
                            android:id="@+id/BusinessEvent_detailsFragment_book_link1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/circularstdblack"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="@color/colorTheme"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/BusinessEvent_detailsFragment_book_link2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/circularstdblack"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="@color/colorTheme"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/BusinessEvent_detailsFragment_book_link3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/circularstdblack"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="@color/colorTheme"
                            android:textStyle="bold" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/defaultmargin"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/circularstdbold"
                                android:text="Attendees"
                                android:textColor="@color/colortextBlack"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/BusinessEvent_detailsFragment_book_attendess_people"
                                android:layout_width="wrap_content"
                                android:fontFamily="@font/sfuitextlight"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/defaultmargin"
                                android:text="4 people are going" />

                            <TextView
                                android:id="@+id/BusinessEvent_detailsFragment_book_seeAll"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:fontFamily="@font/circularstdblack"
                                android:text="+ See All"
                                android:textColor="@color/colorTheme"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/BusinessEvent_detailsFragment_book_recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginTop="10dp">

                        </androidx.recyclerview.widget.RecyclerView>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/bulletin_layout"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="10dp"
                                android:layerType="software"
                                android:background="@drawable/dashed"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/circularstdbold"
                                android:text="Bulletin"
                                android:textColor="@color/colortextBlack"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/seemessagesforthisevent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/circularstdbold"
                                android:text="@string/seemessages"
                                android:textColor="@color/colorTheme"
                                android:textSize="15sp"/>

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/BusinessEvent_detailsFragment_book_bulletin"
                                app:riv_corner_radius="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="280dp"
                                android:layout_margin="10dp"
                                android:visibility="gone"
                                android:scaleType="centerCrop"
                                android:src="@drawable/screen1" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="10dp"
                                android:layerType="software"
                                android:background="@drawable/dashed" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Revenue"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/circularstdblack"
                                android:textColor="@color/colortextBlack"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_gravity="center"
                                android:textSize="@dimen/normalText"
                                android:textColor="@color/colortextBlack"
                                android:id="@+id/freeText"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:id="@+id/pricelayout">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:weightSum="5"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">
                                        <TextView
                                            android:id="@+id/BusinessEvent_detailsFragment_book_price"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="£6"
                                            android:fontFamily="@font/sfuitextlight"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:layout_marginTop="10dp"
                                            android:fontFamily="@font/sfuitextlight"
                                            android:text="Event Price"
                                            android:textSize="12sp" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="0.6"
                                            android:text="X"
                                            android:layout_gravity="center"
                                            android:textAlignment="center"
                                            android:fontFamily="@font/sfuitextlight"
                                            android:textSize="18sp" />
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <TextView
                                            android:id="@+id/BusinessEvent_detailsFragment_book_ticket_number"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1.4"
                                            android:fontFamily="@font/sfuitextlight"
                                            android:text="0"
                                            android:layout_gravity="center"
                                            android:textAlignment="center"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Attendees"
                                            android:layout_marginTop="10dp"
                                            android:textAlignment="center"
                                            android:fontFamily="@font/sfuitextlight"
                                            android:textSize="12sp" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="="
                                            android:layout_gravity="center"
                                            android:textAlignment="center"
                                            android:fontFamily="@font/sfuitextlight"
                                            android:textSize="18sp" />
                                    </LinearLayout>



                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_weight="1">
                                        <TextView
                                            android:id="@+id/BusinessEvent_detailsFragment_book_total_price"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="£0"
                                            android:textAlignment="textEnd"
                                            android:layout_gravity="end"
                                            android:fontFamily="@font/sfuitextlight"
                                            android:gravity="center"
                                            android:textColor="@color/colorTheme"
                                            android:textSize="18sp"
                                            tools:ignore="RtlCompat" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Total"
                                            android:layout_gravity="right"
                                            android:layout_marginTop="10dp"
                                            android:textAlignment="textEnd"
                                            android:fontFamily="@font/sfuitextlight"
                                            android:gravity="center"
                                            android:textSize="12sp"
                                            tools:ignore="RtlCompat" />

                                    </LinearLayout>


                                </LinearLayout>


                                <Button

                                    android:id="@+id/BusinessEvent_detailsFragment_book_event_book_bt"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginTop="@dimen/defaultmargin"
                                    android:background="@drawable/custom_next_bt"
                                    android:fontFamily="@font/circularstdbold"
                                    android:text="Check In Guests"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colortextwhite"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </LinearLayout>



                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:text="Publish"
                            android:fontFamily="@font/circularstdblack"
                            android:textAllCaps="false"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:textColor="@color/colortextwhite"
                            android:textSize="20sp"
                            android:visibility="gone"
                            android:id="@+id/publish_on_eventsdetails"
                            android:background="@drawable/custom_next_bt"/>

                    </LinearLayout>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>