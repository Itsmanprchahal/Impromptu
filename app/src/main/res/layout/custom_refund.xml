<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="5dp"
        tools:ignore="MissingConstraints"
        app:cardBackgroundColor="@color/colortextwhite"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:riv_corner_radius="5dp"
                app:riv_border_width="1dp"
                android:src="@drawable/icon"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                app:riv_border_color="@color/colortextwhite"
                android:id="@+id/see_all_user_image"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/see_all_user_image"
                android:layout_toLeftOf="@id/refund_bt_layout"
                app:layout_constraintLeft_toRightOf="@id/see_all_user_image"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:hint="Event Name"
                    android:fontFamily="@font/circularstdblack"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colortextBlack"
                    android:textSize="@dimen/normalText"
                    android:id="@+id/refundevent_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:hint="User Name"
                    android:fontFamily="@font/circularstdblack"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colortextBlack"
                    android:textSize="@dimen/normalText"
                    android:id="@+id/see_all_user_name"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/circularstdblack"
                    android:textColor="@color/colorTheme"
                    android:textSize="@dimen/normalText"
                    android:id="@+id/bookedticketnumber"
                    android:hint="5"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/refund_bt_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/refund_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/button_color_theme"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:textColor="@color/white"></Button>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/colorTrans"
                    app:cardElevation="1dp">

                    <Button
                        android:id="@+id/refund_cancel"
                        android:background="@color/colorTrans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/black"></Button>
                </androidx.cardview.widget.CardView>


            </LinearLayout>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>