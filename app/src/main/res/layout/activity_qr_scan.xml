<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusinessRegisterLogin.QrScanActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/qr_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:id="@+id/back_on_QR"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan QR Code"
        android:fontFamily="@font/circularstdbold"
        android:textColor="@color/colortextBlack"
        android:textSize="15dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"/>

</RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <SurfaceView
        android:layout_below="@id/qr_toolbar"
        android:id="@+id/cameraPerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/qr_text"/>

    <TextView
        android:id="@+id/qr_text"
        android:fontFamily="@font/circularstdblack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>