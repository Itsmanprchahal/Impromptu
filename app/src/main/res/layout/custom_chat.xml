<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorgrey"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/left"
            android:visibility="visible"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@drawable/roundtextview"
            tools:ignore="MissingConstraints">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_5sdp"
                app:riv_oval="true"
                android:scaleType="fitXY"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="@dimen/_10sdp"
                app:riv_corner_radius="5dp"
                android:background="@drawable/profile"
                android:id="@+id/left_iamge"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@id/left_iamge"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/colortextBlack"
                    android:fontFamily="@font/circularstdblack"
                    android:layout_gravity="start"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:id="@+id/lft_username"
                    android:hint="1"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colortextBlack"
                    android:textSize="15dp"
                    android:hint="2"
                    android:fontFamily="@font/sfuitextlight"
                    android:id="@+id/left_text"
                    android:layout_margin="@dimen/_5sdp"/>

            </LinearLayout>

        </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/roundtextviewright"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="@dimen/_10sdp"
        android:visibility="visible"
        android:id="@+id/right"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:scaleType="fitXY"
            app:riv_oval="true"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/profile"
            android:id="@+id/right_iamge"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            app:layout_constraintRight_toLeftOf="@id/right_iamge"
            android:id="@+id/right_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/right_username"
                android:layout_gravity="end"
                android:fontFamily="@font/circularstdblack"
                android:textColor="@color/colortextwhite"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="1"
                android:layout_marginRight="@dimen/_5sdp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/colortextwhite"
                android:hint="2"
                android:layout_margin="@dimen/_5sdp"
                android:textAlignment="viewEnd"
                android:fontFamily="@font/sfuitextlight"
                android:id="@+id/right_text"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>