<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_280sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_15sdp"
    android:layout_gravity="center"
    android:background="@drawable/ticketboxround">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Profile to continue"
        android:textColor="@color/colortextBlack"
        android:fontFamily="@font/circularstdbold"
        android:textSize="@dimen/_12sdp"
        android:gravity="center_horizontal"
        android:id="@+id/profilechecktext"
        tools:ignore="MissingConstraints" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profilechecktext"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/checkokaydialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Done"
            android:textAllCaps="false"
            android:background="@drawable/custom_next_bt"
            android:textColor="@color/colortextwhite"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/circularstdblack"
            app:layout_constraintTop_toBottomOf="@id/tickettypename_et"/>

        <Button
            android:id="@+id/checkcanceldialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textAllCaps="false"
            android:background="@drawable/custom_next_bt"
            android:textColor="@color/colortextwhite"
            android:layout_marginLeft="@dimen/_5sdp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/circularstdblack"
            app:layout_constraintTop_toBottomOf="@id/tickettypename_et"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>