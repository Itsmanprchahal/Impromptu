<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusinessRegisterLogin.Business_PublishProfileFragment">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardElevation="10dp"
                tools:ignore="MissingConstraints">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:text="Back"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="@dimen/defaultmargin"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:textAlignment="textStart"
                        android:fontFamily="@font/circularstdbold"
                        android:textAllCaps="false"
                        android:id="@+id/business_publish_profile_back_bt"
                        tools:ignore="MissingConstraints,RtlCompat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/circularstdbold"
                        android:padding="@dimen/_7sdp"
                        android:text="Profile"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/colortextBlack"
                        android:textSize="@dimen/toolbartext"
                        tools:ignore="MissingConstraints" />
                </android.support.constraint.ConstraintLayout>


            </android.support.v7.widget.CardView>
        </android.support.design.widget.CoordinatorLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="55dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/defaultmargin"
                android:layout_marginTop="5dp"
                android:layout_marginRight="@dimen/defaultmargin"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/business__publishprofile_user_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circularstdbold"
                    android:text="Bosphorous Kebabs"
                    android:textColor="@color/colortextBlack"
                    app:layout_constraintRight_toLeftOf="@id/business_profilepublish_user_Image"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="@dimen/toolbartext"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/business_profilepublish_user_Image"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:scaleType="centerCrop"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:riv_corner_radius="10dp"
                    tools:ignore="MissingConstraints" />


                <TextView
                    android:id="@+id/business__publishprofile_address1"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sfuitextlight"
                    android:layout_marginRight="@dimen/defaultmargin"
                    android:textColor="@color/colortextBlack"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/business_profilepublish_user_Image"
                    app:layout_constraintTop_toBottomOf="@id/business__publishprofile_user_Name"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/business__publishprofile_address2"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/sfuitextlight"
                    android:textColor="@color/colortextBlack"
                    app:layout_constraintTop_toBottomOf="@id/business__publishprofile_address1"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/aboutus_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:text="About Us"
                    android:fontFamily="@font/circularstdblack"
                    android:textColor="@color/colortextBlack"
                    android:textSize="@dimen/normalText"
                    app:layout_constraintTop_toBottomOf="@id/business__publishprofile_address2"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/aboutUs_Desc_TV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:fontFamily="@font/sfuitextlight"
                    android:textAlignment="textStart"
                    android:textColor="@color/colortextBlack"
                    app:layout_constraintTop_toBottomOf="@id/aboutus_tv" />

                <LinearLayout
                    android:id="@+id/social_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/aboutUs_Desc_TV">


                    <ImageButton
                        android:id="@+id/web_url_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:src="@drawable/ic_weburl" />


                    <ImageButton
                        android:id="@+id/fb_url_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:src="@drawable/ic_facebookurl" />


                    <ImageButton
                        android:id="@+id/insta_url_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:src="@drawable/ic_instagramurl" />


                    <ImageButton
                        android:id="@+id/twiter_url_bt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:src="@drawable/ic_twitterurl" />
                </LinearLayout>


                <TextView
                    android:id="@+id/live_event_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/circularstdbold"
                    android:text="Live Events"
                    android:visibility="gone"
                    android:textColor="@color/colortextBlack"
                    app:layout_constraintTop_toBottomOf="@id/social_layout"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/live_event_texttotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="365dp"
                    android:layout_marginLeft="365dp"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/circularstdbold"
                    android:text="10"
                    android:textColor="@color/colortextBlack"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/business_publish_live_events_recylerview"
                    app:layout_constraintTop_toBottomOf="@id/social_layout"
                    tools:ignore="MissingConstraints" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/business_publish_live_events_recylerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_7sdp"
                    app:layout_constraintTop_toBottomOf="@id/live_event_text"
                    tools:ignore="MissingConstraints">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/past_events_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/circularstdbold"
                    android:visibility="gone"
                    android:text="Past Events"
                    android:textColor="@color/colortextBlack"
                    app:layout_constraintTop_toBottomOf="@id/business_publish_live_events_recylerview"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/past_events_tv_totall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/circularstdbold"
                    android:gravity="end"
                    android:visibility="gone"
                    android:text="10"
                    android:textColor="@color/colortextBlack"
                    app:layout_constraintTop_toBottomOf="@id/business_publish_live_events_recylerview"
                    tools:ignore="MissingConstraints" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/business_publish__pastevents_recylerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/past_events_tv"></android.support.v7.widget.RecyclerView>
            </android.support.constraint.ConstraintLayout>
        </ScrollView>


        <Button
            android:id="@+id/publish_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/defaultmargin"
            android:layout_marginRight="@dimen/defaultmargin"
            android:layout_marginBottom="10dp"
            android:background="@drawable/custom_next_bt"
            android:text="Publish Profile"
            android:textAllCaps="false"
            android:fontFamily="@font/circularstdblack"
            android:textColor="@color/colortextwhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </android.support.constraint.ConstraintLayout>

</FrameLayout>